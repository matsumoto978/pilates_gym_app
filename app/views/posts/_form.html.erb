<div class="form-page">
  <div class="card">
    <div class="card-body">
      <%= form_with model: @post, local: true do |form| %>
        <div class="form-group">
          <%= form.label :name, "店舗名" %>
          <%= form.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class=form-group>
          <%= form.label :ward, "エリア" %>
          <%= form.select :ward, Post.wards.keys.map {|k| [k, k]}, {}, {class: "form-control", style: "margin-bottom: 15px;", data: {} } %>
        </div>
        <div class="form-group">
          <%= form.label :address, "住所" %>
          <%= form.text_field :address, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :URL, "URL" %>
          <%= form.url_field :URL, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :TEL, "電話番号" %>
          <%= form.text_field :TEL, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :img, "店の様子" %><br />
          <%= form.file_field :img, accept: "image/png,image/jpeg,image/gif" %>
        </div>
        <%= form.submit "投稿" %>
      <% end %>
    </div>
  </div>
</div>
