<div class="form-page">
  <%= form_with model: @post, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, "店舗名" %>
      <%= form.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class=form-group>
      <%= form.label :ward_id, "エリア" %>
      <%= form.collection_select :ward_id, Ward.all, :id, :name, {include_blank: "選択して下さい"}, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :address, "住所" %>
      <%= form.text_field :address, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :URL, "URL" %>
      <%= form.url_field :URL, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :TEL, "電話番号" %>
      <%= form.text_field :TEL, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :content, "投稿者コメント" %>
      <%= form.text_field :content, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.file_field :img, accept: "image/png,image/jpeg,image/gif" %>
    </div>
    <hr>
    <div class="search-button mt-4">
      <%= form.submit "投稿", class: "btn btn-block" %>
    </div>
  <% end %>
</div>
