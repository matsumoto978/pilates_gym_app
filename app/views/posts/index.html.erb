<div class="search-form">
  <h1 class="text-center">スタジオを探す</h1>
  <%= search_form_for @q, url: posts_path do |f| %>
    <div class="form-group">
      <%= f.search_field :name_cont, class:"form-control", type:"search", placeholder:"店舗名" %>
    </div>
    <div class="form-group">
      <%= f.collection_select :ward_id_eq, Ward.all, :id, :name, {include_blank: "エリア"}, class: "form-control" %>
    </div>
    <div class=form-group>
      <%= f.search_field :address_cont, autofocus: true, class: "form-control", type:"search", placeholder:"住所" %>
    </div>
    <div class="search-button">
      <%= f.submit "検索", class: "btn btn-block" %>
    </div>
  <% end %>
  <h4 class="title text-center mb-4"><%= @count %>件の検索結果</h4>
  <div class="row posts-group">
    <% @posts.each do |post| %>
      <div class="col-14 col-md-6 col-lg-4 text-card-container">
        <%= link_to post, class: "card content-card text-decoration-none" do %>
          <div class="card-header p-0">
            <%= image_tag post.img.url, class: "card-img-top" %>
          </div>
          <div class="card-body text-dark text-card-body">
            <p class="card-text text-title"><%= post.name %></p>
            <p class="post-address"><%= post.ward.name %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
</div>
