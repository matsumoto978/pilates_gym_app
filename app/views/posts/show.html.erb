<div class="contents-title text-center mt-3 mb-3">
  <h2 class="main-title"><%= @post.name %></h2>
</div>
<section class="container mb-5">
  <div class="row p-0 d-flex mb-2 justify-content-center">
    <div class="col-sm-10 col-md-10 col-lg-6 order-lg-1">
      <% if @post.img? %>
        <div class="thumbnail">
          <% if @post.img? then %>
            <%= image_tag @post.img.url ,class: 'full_image'%>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-pu-10 col-md-10 col-lg-6 pt-4 order-lg-2">
      <div class="ward">
        <span class="title-label">
          住所
        </span>
        <p class="ward">
          <%= @post.address %>
        </p>
      </div>
      <div class="ward">
        <span class="title-label">
          公式サイト
        </span>
        <p class="post-url">
          <% if @post.URL? %>
            <div class="steel-gray"><%= text_url_to_link(h(@post.URL)).html_safe %></div>
          <% end%>
        </p>
      </div>
      <div class="ward">
        <span class="title-label">
          TEL
        </span>
        <p class="post-tel">
          <% if @post.TEL? %>
            <div class="post-TEL"><%= @post.TEL %></div>
          <% end %>
        </p>
      </div>
      <div class="ward">
        <span class="title-label">
          ~投稿者コメント~
        </span>
        <p class="post-content">
          <%= @post.content %>
        </p>
      </div>
      <p class="link-box">
        <% if user_signed_in? && current_user.id == (@post.user_id).to_i %>
          <%= link_to "編集", edit_post_path(@post) %>
          <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: "削除しますか？" } %>
        <% end %>
      </p>
    </div>
  </div>
  <hr>
  <div class="col-sm-12 col-md-13">
    <div class="comment-create">
      <div class="comment-title">コメント</div>
      <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
    </div>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments } %>
    </div>
  </div>
  <hr>
  <div class=login-button>
    <%= link_to "トップページへ", root_path, class:"btn btn-block" %>
  </div>
</section>
</div>
