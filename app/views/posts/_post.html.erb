<div class="cards">
  <a href="/posts/<%= post.id %>" class="cards-body">
    <div class="cards-header">
      <% if post.img? %>
        <img src=<%= post.img.url %>>
      <% else %>
        <%= image_tag "default-posts.jpg" %>
      <% end %>
    </div>
    <div class="post-title">
      <P><%= post.name %></P>
    </div>
  </a>
  <div class="contents steel-gray">
    <div class="post-ward">
      <p><%= post.ward.name %></p>
    </div>
  </div>
  <p class="link-box">
    <% if user_signed_in? && current_user.id == (post.user_id).to_i %>
      <%= link_to "編集", edit_post_path(post) %>
      <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "削除しますか？" } %>
    <% end %>
  </p>
</div>
